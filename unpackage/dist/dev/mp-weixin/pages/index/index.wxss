 .cu-bar {
  padding: 6rpx 0 !important;
  height: calc(112rpx + env(safe-area-inset-bottom) / 2) !important;
}
.text-new-color {
  color: #b5a9f7;
}
.gray-bg {
  background: #f2f2f2;
}
.shadow-none {
  box-shadow: none !important;
}
.flex-play {
  display: flex !important;
}
.flex-play .common-tab {
  padding: 6rpx 50rpx;
  background: linear-gradient(145deg, #f1e6ef, #e7e7e7);
  border-radius: 8rpx;
  transition: all .3s;
  box-shadow: 8rpx 8rpx 16rpx #d7d7d7, -8rpx -8rpx 16rpx #e9e9e9;
}
.flex-play .active-color {
  background: linear-gradient(145deg, #f5e2ee, #f0f0f0);
  box-shadow: 8rpx 8rpx 24rpx #d7d7d7, -8rpx -8rpx 24rpx #e9e9e9;
}

